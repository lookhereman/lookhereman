// Sample API endpoint for artwork
const express = require('express');
const router = express.Router();
const Artwork = require('../models/Artwork');

// Get all available artworks
router.get('/api/artworks', async (req, res) => {
  try {
    const artworks = await Artwork.find({ available: true })
      .sort({ createdAt: -1 });
    res.json(artworks);
  } catch (err) {
    res.status(500).json({ message: err.message });
  }
});

// Create new artwork listing
router.post('/api/artworks', authenticateAdmin, async (req, res) => {
  const artwork = new Artwork({
    title: req.body.title,
    description: req.body.description,
    // other fields
  });
  
  try {
    const newArtwork = await artwork.save();
    res.status(201).json(newArtwork);
  } catch (err) {
    res.status(400).json({ message: err.message });
  }
});

module.exports = router;
